            <TextBlock Margin="0 4" TextAlignment="Left" VerticalAlignment="Center">
                <Run Text="vJoy Device (v"/><Run FontWeight="SemiBold" Text="{Binding VJoyVersion, Mode=OneWay}"/><Run Text="):"/>
            </TextBlock>
            <ComboBox MinWidth="200" HorizontalAlignment="Left" Grid.Row="1" SelectedIndex="0" ItemsSource="{Binding Devices, Mode=OneWay}" SelectedItem="{Binding SelectedDeviceItem, Mode=TwoWay}" >
