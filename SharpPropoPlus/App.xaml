<Application x:Class="SharpPropoPlus.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SharpPropoPlus"
             xmlns:valueConverters="clr-namespace:SharpPropoPlus.ValueConverters">


    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <valueConverters:SystemColorValueConverter x:Key="SystemColorValueConverter" />
                    <valueConverters:AudioBitrateValueConverter x:Key="AudioBitrateValueConverter" />
                    <valueConverters:AudioChannelValueConverter x:Key="AudioChannelValueConverter" />
                </ResourceDictionary>

                <ResourceDictionary Source="Resources/Fonts.xaml" ></ResourceDictionary>
                <ResourceDictionary Source="Resources/Styles.xaml" ></ResourceDictionary>
                <ResourceDictionary Source="Themes/MainWindow.xaml" ></ResourceDictionary>
                
            </ResourceDictionary.MergedDictionaries>
            
            
        </ResourceDictionary>

    </Application.Resources>

</Application>
